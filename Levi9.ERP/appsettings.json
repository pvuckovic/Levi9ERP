{
  "ConnectionStrings": {
    "ErpDatabase": "Data Source=DESKTOP-CCLN27I\\SQLEXPRESS;Initial Catalog=erp;Integrated Security=True;TrustServerCertificate=True"
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Health Checks Dasboard",
        "Uri": "/healthcheck"
      }
    ],
    "EvaluationTimeInSeconds": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "JwtOptions": {
    "Issuer": "https://localhost:7281",
    "Audience": "https://localhost:7281",
    "SigningKey": "some-signing-key-here",
    "ExpirationSeconds": 3600
  }
}
